                    <Setter Property="Background" Value="#3BA55C"/>
                    <Setter Property="Foreground" Value="#f7f7f7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonRadius" TargetType="Button">
            <Setter Property="Background" Value="#006bcb" />
            <Setter Property="Foreground" Value="#f7f7f7" />
            <Setter Property="Template">
